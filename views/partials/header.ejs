<header class="header">
    <section class="header-section flex gap-2">
        <img src="/public/image/account/<%= user.image || 'default-avatar.png' %>" alt="User's image" class="account-image">
        <div class="flex flex-col justify-between">
            <span class="text-md"><%= user.username %></span>
            <span class="text-sm opacity-80"><%= user.email %></span>
        </div>
    </section>
</header>